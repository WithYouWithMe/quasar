.w-date-range-popup
  .calendar-month
    min-width 230px
  .calendar-presets
    min-width 150px
  .active-preset
    border 1px solid #0096d9
    color #0096d9
    border-radius 3px
  .calendar-column
    display inline-block
    width 13.6%
    color #999
    text-align center
  .calendar-days
    margin 0
    padding 0
    li
      display inline-block
      width 13.6%
      color #333
      text-align center
      cursor pointer
      line-height 2em
      &:hover
        background #eee
        color #000
  li
    &.calendar-days-disabled
      pointer-events none
    &.calendar-days-selected
      background $primary
      color #fff
    &.calendar-days-in-range
      background lighten($primary, 20%)
      color #fff

